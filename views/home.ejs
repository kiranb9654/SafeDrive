<!doctype html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.css" rel="stylesheet" />
</head>

<body class="bg-gray-100 dark:bg-gray-800 h-screen w-screen">

  <main class="p-4">

    <!-- Button to open popup -->
    <button id="openPopup" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
      Upload file
    </button>

    <!-- Popup -->
    <div id="popup"
      class="hidden fixed top-0 left-0 h-screen w-screen bg-black/50 backdrop-blur-sm flex items-center justify-center">

      <form action="/upload-file" method="post" enctype="multipart/form-data"
        class="bg-white dark:bg-gray-900 p-6 rounded-lg shadow-xl w-[400px]">



        <div class="flex items-center justify-center mb-4">
          <label for="dropzone-file"
            class="flex flex-col items-center justify-center w-full h-48 border-2 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:bg-gray-700 hover:bg-gray-100">

            <div class="flex flex-col items-center justify-center pt-5 pb-6 text-gray-600 dark:text-gray-300">
              <svg class="w-10 h-10 mb-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-width="2"
                  d="M15 17h3a3 3 0 0 0 0-6h-.025a5.56 5.56 0 0 0 .025-.5A5.5 5.5 0 0 0 7.207 9.021C7.137 9.017 7.071 9 7 9a4 4 0 1 0 0 8h2.167M12 19v-9m0 0-2 2m2-2 2 2" />
              </svg>

              <p class="text-sm"><span class="font-semibold">Click to upload</span> or drag & drop</p>
              <p class="text-xs">SVG, PNG, JPG, GIF (MAX 800Ã—400)</p>
            </div>

            <input id="dropzone-file" type="file" class="hidden" name="file" />
          </label>
        </div>

        <button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 rounded">
          Upload File
        </button>

        <!-- close Popup -->
        <button type="button" id="closePopup" class="mt-3 w-full bg-gray-500 hover:bg-gray-600 text-white py-2 rounded">
          Close
        </button>

      </form>

    </div>

  </main>

  <script>
    const openBtn = document.getElementById("openPopup");
    const closeBtn = document.getElementById("closePopup");
    const popup = document.getElementById("popup");

    openBtn.onclick = () => popup.classList.remove("hidden");
    closeBtn.onclick = () => popup.classList.add("hidden");
  </script>

  <script src="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.js"></script>
</body>

</html>